    position top
        status_command i3status
        colors {
            background #2E3440
            separator  #ECEFF4
            statusline #ECEFF4
            focused_workspace  #5E81AC #5E81AC #ECEFF4
            active_workspace   #5E81AC #5E81AC #ECEFF4
            urgent_workspace   #BF616A #BF616A #2E3440
        }
}

# start application
exec --no-startup-id nitrogen --restore
exec --no-startup-id nm-applet
exec --no-startup-id fcitx -d
exec --no-startup-id dunst &

# Screenshot
# Full Screen
bindsym  Print exec --no-startup-id "maim ~/Pictures/$(date +%s).png"
# Window
bindsym shift + Print exec --no-startup-id "maim -i $(xdotool getactivewindow) ~/Pictures/window_$(date +%s).png"
# Region
bindsym ctrl + Print exec --no-startup-id "maim -s ~/Pictures/window_$(date +%s).png | xclip -selection clipboard -t image/png -i"


# Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id "pulsemixer --change-volume +5"
bindsym XF86AudioLowerVolume exec --no-startup-id "pulsemixer --change-volume -5"
bindsym XF86AudioMute exec --no-startup-id "pulsemixer --toggle-mute"

# Media Controls
bindsym XF86AudioPlay exec --no-startup-id "mpc toggle"
bindsym XF86AudioNext exec --no-startup-id "mpc next"
bindsym XF86AudioPrev exec --no-startup-id "mpc prev"


