# Screenshot
# Full Screen
bindsym  Print exec "maim ~/Pictures/$(date +%s).png"
# Window
bindsym shift + Print exec "maim -i $(xdotool getactivewindow) ~/Pictures/window_$(date +%s).png"
# Region
bindsym ctrl + Print exec "maim -s ~/Pictures/window_$(date +%s).png | xclip -selection clipboard -t image/png -i"


# Volume
bindsym XF86AudioRaiseVolume exec "pulsemixer --change-volume +5"
bindsym XF86AudioLowerVolume exec "pulsemixer --change-volume -5"
bindsym XF86AudioMute exec "pulsemixer --toggle-mute"

# Media Controls
bindsym XF86AudioPlay exec "mpc toggle"
bindsym XF86AudioNext exec "mpc next"
bindsym XF86AudioPrev exec "mpc prev"


